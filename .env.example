# Environment variables for readme-mentor
# Copy this file to .env and fill in your actual values
# Follow 12-Factor App principles: https://12factor.net/config

# Required API Keys (must be set)
GITHUB_TOKEN=your_github_token_here
OPENAI_API_KEY=your_openai_api_key_here

# Application settings
APP_NAME=readme-mentor
APP_VERSION=0.0.6
DEBUG=false
LOG_LEVEL=INFO

# Server settings
HOST=0.0.0.0
PORT=8000
RELOAD=false

# Database settings (if using)
DATABASE_URL=sqlite:///./data/readme_mentor.db

# External services
CHROMA_DB_HOST=localhost
CHROMA_DB_PORT=8000

# Security
SECRET_KEY=your_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Development settings
ENVIRONMENT=development
